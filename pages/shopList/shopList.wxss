
.shop {
	padding: 20rpx;
	display: flex;
	border-bottom: 1rpx solid #ddd;
	position: relative;
}
.shop image {
	width: 160rpx;
	height: 160rpx;
	margin-right: 20rpx;
}
.shop-item {
	width: 520rpx;
	display: flex;
	flex-direction: column;
	font-size: 12px;
	color: #666;
	line-height: 1.4;
}
.shop-title {
	font-size: 16px;
	color: #333;
    width: 380rpx;
    
    /* overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis; */
}
.shop-star {
	position: absolute;
	top: 20rpx;
	right: 20rpx;
}
