page {
    background-color: #f1f1f1;
}
.card {
    background-color: #fff;
    margin: 60rpx 20rpx;
    padding: 30rpx 20rpx;
    display: flex;
    flex-direction: column;
}
.card-title {
    font-size: 18px;
}
.card-date {
    font-size: 14px;
    padding: 25rpx 0 15rpx 0;
    border-bottom: 1rpx solid #ddd;
    margin-bottom: 20rpx;
    color: #ccc;
}
.card-img {
    width: 100%;
    height: 300rpx;
}
.card-desc {
    font-size: 16px;
    color: #333;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #ddd;
    margin-bottom: 20rpx;
}
.card-detail {
    font-size: 14px;
    color: #666;
}
